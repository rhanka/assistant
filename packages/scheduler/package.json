{
  "name": "@repo/scheduler",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run \"tests/unit/**/*.spec.ts\" \"src/index.test.ts\"",
    "test:integration": "vitest run tests/integration/",
    "test:integration:workers": "vitest run tests/integration/workers.spec.ts",
    "test:integration:ai": "vitest run tests/integration/ai.spec.ts"
  },
  "dependencies": {
    "bullmq": "^5.7.0"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "ts-node-dev": "^2.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^20.14.10"
  }
}
