{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task",
  "type": "object",
  "required": ["id", "title"],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "type": { "type": "string", "enum": ["epic", "story", "task", "bug", "spike", "chore"] },
    "status": { "type": "string", "enum": ["todo", "in-progress", "blocked", "review", "done", "cancelled"] },
    "assignee": { "type": "string" },
    "labels": { "type": "array", "items": { "type": "string" } },
    "estimate": { "type": "number" },
    "dueDate": { "type": "string", "format": "date-time" },
    "dependencies": { "type": "array", "items": { "type": "string" } },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "action"],
        "properties": {
          "id": { "type": "string" },
          "action": { "type": "string" },
          "params": { "type": "object", "additionalProperties": true },
          "approvalRequired": { "type": "boolean", "default": false }
        }
      }
    }
  }
}
